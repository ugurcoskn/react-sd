{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom"],
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "isolatedModules": false,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "setup.test.js"],
  "exclude": ["node_modules", "demo"]
}